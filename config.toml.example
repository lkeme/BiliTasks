title = "BiliTasks"

# 全局设置
[global]
debug = true # debug模式
silence = true # 过滤封禁
delay = 5 # 每个账号之间延迟
mode = ['pc', 'app'] # 全局mode 以下任务用了什么模式就填里面

[log]
enable = true
normal_log = "bilibili.log" # 日志文件名
errors_log = "errors.log" # 错误日志

# 数据库设置
[database]
host = "127.0.0.1"
user = "root"
pass = ""
name = "login-1"
port = 3306
table = "login-user-001"
idens = ["TEST-1", "TEST-2"]  # 支持一到多

# 拨号设置
[dial] # 未启用
enable = false # 开关
username = "123456"
password = "123456"
interval = 3  # 几个拨一次号

# 代理设置
[proxy] # 未启用
enable = false # 开关
pool = "proxy.txt" # 代理池

###########################
## 任务区(模式多个随机)   ##
## 支持列表["pc", "app"]  ##
## 模式多个则随机运行     ##
###########################

# 观看
[watch]
# support_mode = ["pc", "app"]
mode = ["pc", "app"]
enable = true
delay = 1

# 分享
[share]
# support_mode = ["pc", "app"]
mode = ["pc", "app"]
enable = true
delay = 1

# 直播签到
[live_sign]
# support_mode = ["pc", "app"]
mode = ["pc", "app"]
enable = true
delay = 1

# 直播赠送
[live_send]
# support_mode = ["pc"]
mode = ["pc"]
enable = true
gift_id = 1  # 礼物ID 1-辣条  30607-小心心  3-B坷垃
target_rid = 9522051  # 目标直播间
target_uid = 6580464  # 目标直播间对应UID
expires = 86400  # 过期时间
delay = 1

# 银瓜子兑换硬币
[silver2coin]
# support_mode = ["pc"]
mode = ["pc"]
enable = true
delay = 1

